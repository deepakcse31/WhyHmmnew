<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/date_background"
        android:id="@+id/laydate"
        android:layout_marginTop="8dp"
        android:layout_marginStart="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="14"
            android:fontFamily="@font/nunitobold"
            android:textSize="15dp"
            android:id="@+id/tvdate"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="May"
            android:textSize="10dp"
            android:fontFamily="@font/nunitoregular"
            android:textColor="@color/suggsetiontextcolor"
            app:layout_constraintTop_toBottomOf="@+id/tvdate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="15dp"
        android:translationZ="5dp"
        app:layout_constraintStart_toEndOf="@+id/laydate"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="15dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/series_card"
                android:scaleType="fitXY"
                android:id="@+id/ivseries"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/personal_marketing_ndevelopment"
                app:layout_constraintTop_toBottomOf="@+id/ivseries"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="@font/nunitosemibold"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:id="@+id/tvheadingseries"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/share_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvheadingseries"
                app:layout_constraintBottom_toBottomOf="@+id/tvheadingseries"
                android:layout_marginEnd="15dp"
                android:id="@+id/ivshare"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/like_"
                app:layout_constraintTop_toTopOf="@+id/ivshare"
                app:layout_constraintBottom_toBottomOf="@+id/ivshare"
                app:layout_constraintEnd_toStartOf="@+id/ivshare"
                android:layout_marginEnd="5dp"
                android:id="@+id/ivlike"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/notification_icon_"
                app:layout_constraintTop_toTopOf="@+id/ivlike"
                app:layout_constraintBottom_toBottomOf="@+id/ivlike"
                app:layout_constraintEnd_toStartOf="@+id/ivlike"
                android:layout_marginEnd="5dp"
                android:visibility="invisible"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="15dp"
                android:text="@string/marketing_is_a_fast_evolving_industry_to_keep_up_you_need_to_know_the_latest_terms_and_definitions_thats_why_we_ve_put_together_a_read_more"
                app:layout_constraintTop_toBottomOf="@+id/tvheadingseries"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/nunitoregular"
                android:textColor="@color/suggsetiontextcolor"
                android:id="@+id/tvseriesdetails"

                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvseriesdetails"
                app:layout_constraintStart_toStartOf="@+id/tvseriesdetails"
                android:src="@drawable/circle"
                android:layout_marginTop="15dp"
                android:id="@+id/ivone"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/ivone"
                app:layout_constraintBottom_toBottomOf="@+id/ivone"
                android:src="@drawable/circle"
                app:layout_constraintStart_toStartOf="@+id/ivone"
                android:layout_marginStart="15dp"
                android:id="@+id/ivtwo"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/ivone"
                app:layout_constraintBottom_toBottomOf="@+id/ivone"
                android:src="@drawable/circle"
                app:layout_constraintStart_toStartOf="@+id/ivone"
                android:layout_marginStart="25dp"
                android:id="@+id/ivthree"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/ivthree"
                app:layout_constraintStart_toEndOf="@+id/ivthree"
                android:layout_marginStart="10dp"
                android:text="@string/your_mentors"
                android:textColor="@color/redcolor"
                android:fontFamily="@font/nunitoregular"
                android:textSize="14dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>